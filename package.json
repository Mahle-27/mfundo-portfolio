  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/lodash": "^4.14.169",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
